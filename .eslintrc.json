{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/jsx-runtime", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "arrow-parens": ["warn", "always"],
    "no-unused-vars": ["warn", { "args": "none" }],
    "prefer-const": "error",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ]
  },
  "globals": {
    "JSX": "writable"
  }
}
